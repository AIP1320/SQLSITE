    <script>
        // Simple visitor counter (resets on page reload)
        let visitors = Math.floor(Math.random() * 1000) + 1;
        document.getElementById('count').textContent = visitors;

        // Interactive functions
        function showMessage() {
            alert('Hello! Thanks for visiting my website! ðŸŽ‰');
        }

        let isDarkTheme = false;
        function changeTheme() {
            const body = document.body;
            if (!isDarkTheme) {
                body.style.background = 'linear-gradient(135deg, #2c3e50 0%, #34495e 100%)';
                isDarkTheme = true;
            } else {
                body.style.background = 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)';
                isDarkTheme = false;
            }
        }

        // Add some animation on scroll
        window.addEventListener('scroll', () => {
            const cards = document.querySelectorAll('.feature-card');
            cards.forEach(card => {
                const rect = card.getBoundingClientRect();
                if (rect.top < window.innerHeight && rect.bottom > 0) {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }
            });
        });
    </script>
